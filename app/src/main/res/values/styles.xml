<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:dropDownListViewStyle">@style/AlphaSelector</item>
    </style>

    <style name="WhiteEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginBottom">@dimen/very_low</item>
        <item name="android:layout_marginTop">@dimen/very_low</item>
        <item name="android:layout_marginStart">@dimen/et_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/et_horizontal_margin</item>
        <item name="android:paddingEnd">@dimen/et_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/et_vertical_padding</item>
        <item name="android:paddingTop">@dimen/et_vertical_padding</item>
        <item name="android:paddingStart">@dimen/et_horizontal_padding</item>
        <item name="android:background">@drawable/shape_et_registration</item>
        <item name="android:textColorHint">@color/geyser</item>
        <item name="android:textSize">@dimen/low_text</item>
        <item name="android:textCursorDrawable">@drawable/shape_et_cursor</item>
    </style>

    <style name="SendButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_button_send</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/low_text</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Switcher" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumb">@drawable/shape_switch_thumb_enable</item>
        <item name="track">@drawable/selector_switch_thumb</item>
    </style>


    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <style name="AlphaSelector">
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

</resources>
