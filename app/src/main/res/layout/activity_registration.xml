<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.RegistrationActivity">


    <include layout="@layout/toolbar"
             android:id="@+id/toolbar_registration"/>

    <com.example.santa.anative.widget.viewpager.NonSwappableViewPager
        android:id="@+id/vp_registration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_registration"/>

</RelativeLayout>
