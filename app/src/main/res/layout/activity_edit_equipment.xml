<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_auth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"
             android:id="@+id/toolbar_edit_equipment"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/geyser"
                android:gravity="center"
                android:layout_height="100dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_add_black_24dp"
                    android:gravity="center"
                    android:text="@string/addition_image"/>

            </LinearLayout>

            <EditText
                android:inputType="textCapSentences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/et_vertical_margin"
                style="@style/WhiteEditText"/>

            <EditText
                android:inputType="textCapSentences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/WhiteEditText"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/text_horizontal_edit_equipment"
                android:paddingEnd="@dimen/text_horizontal_edit_equipment"
                android:text="@string/equipment_name"/>

            <EditText
                android:inputType="textCapSentences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/WhiteEditText"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/text_horizontal_edit_equipment"
                android:paddingEnd="@dimen/text_horizontal_edit_equipment"
                android:text="@string/country_code"/>

            <EditText
                android:inputType="textCapSentences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/WhiteEditText"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/text_horizontal_edit_equipment"
                android:paddingEnd="@dimen/text_horizontal_edit_equipment"
                android:text="@string/locality"/>

            <EditText
                android:inputType="textCapSentences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/WhiteEditText"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/text_horizontal_edit_equipment"
                android:paddingEnd="@dimen/text_horizontal_edit_equipment"
                android:text="@string/address"/>

            <EditText
                android:inputType="textCapSentences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/WhiteEditText"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/text_horizontal_edit_equipment"
                android:paddingEnd="@dimen/text_horizontal_edit_equipment"
                android:text="@string/coordinates_gps"/>

            <EditText
                android:inputType="textCapSentences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/WhiteEditText"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/low"
                android:layout_marginBottom="@dimen/activity_vertical_margin">

                <Button
                    android:text="@string/save"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    style="@style/SendButton"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
